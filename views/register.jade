extends layout

block content
  .col-md-6.col-md-offset-3
    if(errors.length)
      .alert.alert-danger
        for error in errors
          p= error
    form(id='login' action='/register' method='POST')
      .form-group
        label(for="email") Email
        input.form-control(id="email" type="text", name="email", value="" placeholder="Email")
      .form-group
        label(for="password") Password
        input.form-control(id="password" type="password", name="password", value="" placeholder="Password")
      .form-group
        label(for="confirmPW") Confirm Password
        input.form-control(id="confirmPW" type="password", name="confirmPW", value="" placeholder="Confirm")
      .form-group
        input.btn.btn-primary(type="submit", name="submit", value="Login")
        
      
    
    
